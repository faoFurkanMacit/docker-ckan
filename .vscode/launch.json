    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "jinja": true,  
            "port": 5678,
            "host": "localhost",
            "justMyCode": false,
            "console": "integratedTerminal",
            "logToFile": true,
            "showReturnValue": true,
            "stopOnEntry" : false,
            "workingDirectory": "${workspaceFolder}\\src",
            "cwd": "${workspaceFolder}\\src",
            "sudo": true,
            "sourceMap": {
                "${cwd}": "${workspaceFolder}"
            },
            "pathMappings": [
                //{
                //     "localRoot": "${workspaceFolder}",
                //     "remoteRoot": "/usr/lib/ckan/venv/"
                // },
                {

                    "localRoot": "${workspaceFolder}\\src",
                    "remoteRoot": "/usr/lib/ckan/venv/src_extensions/"
                }
            ]
        },
        {
            "name": "1_HARVESTER_GATHER",
            "type": "python",
            "request": "attach",
            "jinja": false,
            "port": 5677,
            "host": "localhost",
