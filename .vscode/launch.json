            "logToFile": false,
            "showReturnValue": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/",
                    "remoteRoot": "/srv/app/src_extensions/"
                }
            ]
        },
        {
            "name": "2_HARVESTER_FETCH",
